{% schema %}
{
  "name": "Bénéfices produit",
  "tag": "section",
  "class": "section section-benefits",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre de la section",
      "default": "Bénéfices"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Image principale"
    },
    {
      "type": "color",
      "id": "icon_bg_color",
      "label": "Couleur de fond des icônes",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Couleur des icônes",
      "default": "#d6a97d"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Bénéfice",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titre du bénéfice",
          "default": "Titre du bénéfice"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description du bénéfice"
        },
        {
          "type": "select",
          "id": "position",
          "label": "Position",
          "options": [
            {
              "value": "left",
              "label": "Gauche"
            },
            {
              "value": "right",
              "label": "Droite"
            }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bénéfices produit",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "title": "Bronzer sans soleil",
            "description": "Permet d'obtenir un teint hâlé sans avoir besoin de s'exposer aux rayons UV et facilement depuis chez soi.",
            "position": "left"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "title": "Effet immédiat",
            "description": "Idéal pour les occasions spéciales ou les événements de dernière minutes, ou pour conserver un bronzage de rêve toute l'année.",
            "position": "left"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "title": "Senteurs exotiques",
            "description": "Tous nos produits sont délicatement parfumés avec des fragrances qui vous plongent dans notre univers ensoleillé.",
            "position": "left"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "title": "Utilisation",
            "description": "Convient à tous les types de peaux et peut s'appliquer sur le visage et le corps.",
            "position": "right"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "title": "Facile à appliquer",
            "description": "Simple et pratique à appliquer, elle sèche rapidement, ne fais pas de traces ni de tâches.",
            "position": "right"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "title": "Hydratation",
            "description": "Grâce à l'aloe vera présent dans la formule, elle est également un très bon hydratant pour la peau.",
            "position": "right"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="page-width">
  <div class="section-header text-center">
    <h2>{{ section.settings.title }}</h2>
  </div>

  <div class="benefits-container">
    <div class="benefits-grid">
      <div class="benefits-column benefits-column--left">
        {% for block in section.blocks %}
          {% if block.settings.position == "left" %}
            <div class="benefit-item" {{ block.shopify_attributes }}>
              <div class="benefit-content">
                <div class="benefit-icon" style="background-color: {{ section.settings.icon_bg_color }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="{{ section.settings.icon_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                </div>
                <div class="benefit-text">
                  <h3>{{ block.settings.title }}</h3>
                  <p>{{ block.settings.description }}</p>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      <div class="benefits-image">
        {% if section.settings.main_image != blank %}
          {{ section.settings.main_image | image_url: width: 800 | image_tag: 
             loading: 'lazy', 
             class: 'benefits-main-image',
             sizes: '(min-width: 750px) 800px, calc(100vw - 30px)',
             widths: '375, 550, 750, 800' 
          }}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg benefits-main-image' }}
        {% endif %}
      </div>
      
      <div class="benefits-column benefits-column--right">
        {% for block in section.blocks %}
          {% if block.settings.position == "right" %}
            <div class="benefit-item" {{ block.shopify_attributes }}>
              <div class="benefit-content">
                <div class="benefit-icon" style="background-color: {{ section.settings.icon_bg_color }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="{{ section.settings.icon_color }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                </div>
                <div class="benefit-text">
                  <h3>{{ block.settings.title }}</h3>
                  <p>{{ block.settings.description }}</p>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
.benefits-container {
  margin: 0 auto;
  max-width: 1200px;
  padding: 0 20px;
}

.benefits-grid {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  gap: 20px;
  align-items: center;
}

.benefits-column {
  display: flex;
  flex-direction: column;
  gap: 30px;
}

.benefits-image {
  text-align: center;
  padding: 0 20px;
}

.benefits-main-image {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
}

.benefit-item {
  margin-bottom: 20px;
}

.benefit-content {
  display: flex;
  align-items: flex-start;
  gap: 15px;
}

.benefit-icon {
  flex-shrink: 0;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.benefit-text h3 {
  margin: 0 0 8px 0;
  font-size: 18px;
  font-weight: 600;
}

.benefit-text p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
}

@media screen and (max-width: 989px) {
  .benefits-grid {
    grid-template-columns: 1fr;
    grid-template-rows: auto;
  }
  
  .benefits-image {
    order: -1;
    padding: 30px 0;
  }
  
  .benefits-column--left,
  .benefits-column--right {
    padding: 0;
  }
}
{% endstylesheet %}